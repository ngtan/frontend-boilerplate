{
  "name": "frontend-boilerplate",
  "version": "1.0.0",
  "description": "Make the development process as fast as possible",
  "main": "index.js",
  "scripts": {
    "dev": "webpack-dev-server --config ./internals/webpack/webpack.config.dev.js",
    "build": "webpack --config ./internals/webpack/webpack.config.prod.js --color -p --progress --hide-modules --display-optimization-bailout",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:css": "stylelint \"./app/**/*.scss\"",
    "test": "npm run lint:js && npm run lint:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngtan/frontend-boilerplate.git"
  },
  "author": "Tan Nguyen <tannd1993@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngtan/frontend-boilerplate/issues"
  },
  "homepage": "https://github.com/ngtan/frontend-boilerplate#readme",
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "modernizr": "3.6.0",
    "sanitize.css": "6.0.0"
  },
  "devDependencies": {
    "autoprefixer": "8.6.3",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.3",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.7.0",
    "clean-webpack-plugin": "0.1.19",
    "css-loader": "0.28.11",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.12.0",
    "file-loader": "1.1.11",
    "glob": "7.1.2",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.0.0-rc.9",
    "image-webpack-loader": "4.3.1",
    "json-loader": "0.5.7",
    "mini-css-extract-plugin": "0.4.0",
    "modernizr-loader": "1.0.1",
    "node-sass": "4.9.0",
    "postcss-loader": "2.1.5",
    "pug": "2.0.3",
    "pug-loader": "2.4.0",
    "sass-loader": "7.0.3",
    "style-loader": "0.21.0",
    "stylelint": "9.3.0",
    "stylelint-config-recommended-scss": "3.2.0",
    "stylelint-scss": "3.1.3",
    "svg-inline-loader": "0.8.0",
    "url-loader": "1.0.1",
    "webpack": "4.12.0",
    "webpack-cli": "3.0.6",
    "webpack-dev-server": "3.1.4",
    "webpack-pwa-manifest": "3.6.2"
  },
  "husky": {
    "pre-commit": "npm test"
  }
}
