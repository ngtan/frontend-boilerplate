{
  "name": "frontend-boilerplate",
  "version": "1.1.0",
  "description": "Make the development process as fast as possible",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngtan/frontend-boilerplate.git"
  },
  "engines": {
    "npm": ">=5",
    "node": ">=8.10.0"
  },
  "author": "Tan Nguyen",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --config ./internals/webpack/webpack.config.dev.js",
    "prebuild": "rimraf ./public",
    "build": "webpack --config ./internals/webpack/webpack.config.prod.js --color -p --progress --hide-modules --display-optimization-bailout",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:css": "stylelint \"./app/**/*.scss\"",
    "lint:staged": "lint-staged",
    "test": "npm run lint:js && npm run lint:css"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:js"
    ],
    "*.scss": [
      "npm run lint:css"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "7.4.3",
    "jquery": "3.4.0",
    "sanitize.css": "8.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "autoprefixer": "9.5.1",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "css-loader": "2.1.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.17.2",
    "file-loader": "3.0.1",
    "glob": "7.1.3",
    "html-webpack-plugin": "3.2.0",
    "image-webpack-loader": "4.6.0",
    "json-loader": "0.5.7",
    "mini-css-extract-plugin": "0.5.0",
    "node-sass": "4.12.0",
    "postcss-loader": "3.0.0",
    "pug": "2.0.3",
    "pug-loader": "2.4.0",
    "rimraf": "2.6.3",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "stylelint": "10.0.1",
    "stylelint-config-recommended-scss": "3.3.0",
    "stylelint-scss": "3.6.1",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.1",
    "webpack-dev-server": "3.3.1",
    "webpack-pwa-manifest": "4.0.0"
  }
}
